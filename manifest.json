{
  "manifest_version": 2,

  "name": "NextcloudPasswordsFetcher",
  "description": "Fetches your Nextcloud passwords and inserts them directly into the login form",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icons/icon-128.png"
  },
  "background" : {
    "scripts" : ["background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*"
  ]
}
