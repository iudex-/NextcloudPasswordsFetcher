{
  "manifest_version": 2,

  "name": "NextcloudPasswordsFetcher",

  "description":  "This extension can fetch passwords from your Nextcloud/Owncloud and insert them directly into logins form.",
  "version": "0.1.3",

  "options_page": "options.html",

  "homepage_url": "https://github.com/iudex-/NextcloudPasswordsFetcher",
  "icons": {
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*"
  ]
}
